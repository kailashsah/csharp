<Window x:Class="resources_brush.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:resources_brush"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="RectBrush" Color="green"></SolidColorBrush>
    </Window.Resources>
    <Grid>
        <Border BorderThickness="3" BorderBrush="Blue" >
            <TextBlock Background="{StaticResource RectBrush}" UseLayoutRounding="True" Margin="83,110,346.6,224"/>
        </Border>
            <Label BorderThickness="1" BorderBrush="Red" Background="{DynamicResource dynamicColor}" UseLayoutRounding="True" Margin="200,212,346.6,122"/>
    </Grid>
</Window>
