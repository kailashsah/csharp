<UserControl x:Class="prism_basic.view.Person"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prism_basic.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Person usercontrol"  Padding="5"/>
        <TextBox Text="{Binding Name, Mode=TwoWay}" Name="textBoxPerson" Width="200" Height="40"/>
    </StackPanel>
</UserControl>
